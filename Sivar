            })
        else
            Rayfield:Notify({
                Title = "플라이핵",
                Content = "비활성화되었습니다.",
                Duration = 2
            })
        end
    end
})

local currentFlySpeedLabel = MainTab:CreateLabel("현재 플라이 속도: 50")

